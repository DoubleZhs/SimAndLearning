{
    "simulation": {
        "oneDayTimeSteps": 57600,
        "simDay": 60
    },
    "graph": {
        "graphType": "cycle",
        "cycleGraph": {
            "numCell": 8000,
            "lightIndexInterval": 800
        },
        "starRingGraph": {
            "ringCellsPerDirection": 500,
            "starCellsPerDirection": 250
        }
    },
    "logging": {
        "intervalWriteToLog": 1200,
        "intervalWriteOtherData": 14400
