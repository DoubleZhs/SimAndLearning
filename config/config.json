        "fixedNum": 0,
        "dayRandomDisRange": 0.1,
        "randomDisRange": 0.2
    },
    "vehicle": {
        "numClosedVehicle": 100
    },
    "trafficLight": {
        "initPhaseInterval": 40,
        "changes": [
            {
                "day": 21,
                "multiplier": 2
            },
            {
                "day": 41,
                "multiplier": 2
            }
        ]
    },
